<%- include("partials/header") %>

<div class="container">
	<div class="row">
	<h1 style="text-align: center"> Add a new campground </h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="addname" placeholder="Add a campground">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="addimage" placeholder="Add a image url">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
			</div>
		</form>
		<a href="/campgrounds">Go back to the list!</a>
	</div>
	
    </div>
</div>
<%- include("partials/footer") %>