<%- include("../partials/header") %>

<div class="container">
	<div class="row">
	<h1 style="text-align: center"> Add a new comment to <%= campground.name %> </h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds/<%= campground._id %>/comments/new" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Add your comment">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="Author">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
			</div>
		</form>
		<a href="/campgrounds">Go back to the post!</a>
	</div>
	
    </div>
</div>
<%- include("../partials/footer") %>